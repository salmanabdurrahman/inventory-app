<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Login - GudangApp</title>
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css'
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Space Grotesk', sans-serif;
        background-color: #f5f5f5;
        background-image: radial-gradient(circle, #ddd 1px, transparent 1px);
        background-size: 20px 20px;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .login-container {
        width: 100%;
        max-width: 600px;
        padding: 1rem;
      }

      .login-card {
        background: #fff;
        border: 3px solid #000;
        border-radius: 16px;
        box-shadow: 8px 8px 0px #000;
        padding: 2.5rem;
      }

      .login-header {
        text-align: center;
        margin-bottom: 2rem;
      }

      .login-badge {
        display: inline-block;
        background: #fbbf24;
        color: #000;
        padding: 0.5rem 1.5rem;
        border: 3px solid #000;
        border-radius: 9999px;
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 1rem;
      }

      .login-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #000;
        margin-bottom: 0.5rem;
      }

      .login-subtitle {
        color: #6b7280;
        font-size: 0.875rem;
      }

      .form-group {
        margin-bottom: 1.25rem;
      }

      .form-label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #000;
      }

      .form-input {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 3px solid #000;
        border-radius: 8px;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.15s;
      }

      .form-input:focus {
        outline: none;
        box-shadow: 4px 4px 0px #fbbf24;
      }

      .btn {
        display: block;
        width: 100%;
        padding: 1rem;
        border: 3px solid #000;
        border-radius: 8px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.15s;
        font-family: inherit;
        background: #fbbf24;
        color: #000;
      }

      .btn:hover {
        transform: translate(-2px, -2px);
        box-shadow: 4px 4px 0px #000;
      }

      .btn:active {
        transform: translate(2px, 2px);
        box-shadow: 0px 0px 0px #000;
      }

      .error-message {
        background: #fef2f2;
        border: 2px solid #ef4444;
        color: #b91c1c;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        margin-bottom: 1.25rem;
        font-size: 0.875rem;
        text-align: center;
      }

      .demo-info {
        margin-top: 1.5rem;
        padding: 1rem;
        background: #f0f9ff;
        border: 2px solid #000;
        border-radius: 8px;
        font-size: 0.75rem;
      }

      .demo-info-title {
        font-weight: 700;
        margin-bottom: 0.5rem;
      }

      .demo-info code {
        background: #e0f2fe;
        padding: 0.125rem 0.375rem;
        border-radius: 4px;
        font-family: monospace;
      }
    </style>
  </head>
  <body>
    <div class='login-container'>
      <div class='login-card'>
        <div class='login-header'>
          <div class='login-badge'>GUDANG</div>
          <h1 class='login-title'>Selamat Datang!</h1>
          <p class='login-subtitle'>Masuk ke akun Anda untuk melanjutkan</p>
        </div>
        {{#if error}}
          <div class='error-message'>
            <i class='fas fa-exclamation-circle'></i>
            {{error}}
          </div>
        {{/if}}
        <form action='/users/login' method='POST'>
          <div class='form-group'>
            <label class='form-label'>Email</label>
            <input
              type='email'
              name='email'
              class='form-input'
              placeholder='email@example.com'
              value='{{email}}'
              required
            />
          </div>
          <div class='form-group'>
            <label class='form-label'>Password</label>
            <input
              type='password'
              name='password'
              class='form-input'
              placeholder='••••••••'
              required
            />
          </div>
          <button type='submit' class='btn'>
            <i class='fas fa-sign-in-alt'></i>
            Masuk
          </button>
        </form>
        <div class='demo-info'>
          <div class='demo-info-title'>Demo Account</div>
          <p>Email: <code>admin@gudangapp.com</code></p>
          <p>Password: <code>admin123</code></p>
        </div>
      </div>
    </div>
  </body>
</html>