<div style='max-width: 500px; margin: 0 auto;'>
  <div class='page-header'>
    <h1 class='page-title'><i
        class='fas fa-edit'
        style='margin-right: 0.5rem;'
      ></i>Edit Item</h1>
  </div>
  <div class='card'>
    <form action='/items/{{item.id}}?_method=PUT' method='POST'>
      <div class='form-group'>
        <label class='form-label'>Item Name
          <span style='color: #ef4444;'>*</span></label>
        <input
          type='text'
          name='name'
          value='{{item.name}}'
          class='form-input'
          placeholder='e.g. Laptop ASUS ROG'
          required
        />
      </div>
      <div class='form-group'>
        <label class='form-label'>Supplier
          <span style='color: #ef4444;'>*</span></label>
        <select
          name='supplierId'
          class='form-input'
          id='supplierSelect'
          required
        >
          <option value=''>-- Select Supplier --</option>
          {{#each suppliers}}
            <option value='{{this.id}}'>{{this.name}}</option>
          {{/each}}
        </select>
        <input
          type='hidden'
          id='currentSupplierId'
          value='{{item.supplier.id}}'
        />
      </div>
      <div class='form-group'>
        <label class='form-label'>Stock
          <span style='color: #ef4444;'>*</span></label>
        <input
          type='number'
          name='stock'
          value='{{item.stock}}'
          class='form-input'
          placeholder='e.g. 100'
          min='0'
          required
        />
      </div>
      <div class='form-group'>
        <label class='form-label'>Price (Rp)
          <span style='color: #ef4444;'>*</span></label>
        <input
          type='number'
          name='price'
          value='{{item.price}}'
          class='form-input'
          placeholder='e.g. 15000000'
          min='0'
          required
        />
      </div>
      <div
        style='display: flex; gap: 1rem; justify-content: flex-end; margin-top: 1.5rem;'
      >
        <a href='/items' class='btn btn-secondary'>
          <i class='fas fa-arrow-left'></i>
          Cancel
        </a>
        <button type='submit' class='btn btn-warning'>
          <i class='fas fa-save'></i>
          Update
        </button>
      </div>
    </form>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function() { var
  currentSupplierId = document.getElementById('currentSupplierId').value; var
  select = document.getElementById('supplierSelect'); if (currentSupplierId) {
  select.value = currentSupplierId; } });
</script>