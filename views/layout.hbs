<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>GudangApp - Inventory Management</title>
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css'
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Space Grotesk', sans-serif;
        background-color: #f5f5f5;
        background-image: radial-gradient(circle, #ddd 1px, transparent 1px);
        background-size: 20px 20px;
        min-height: 100vh;
      }

      /* Neo Brutalism Base Styles */
      .neo-border {
        border: 3px solid #000;
        box-shadow: 4px 4px 0px #000;
      }

      /* Navigation */
      .nav {
        background: #fbbf24;
        border-bottom: 4px solid #000;
        padding: 1rem 2rem;
      }

      .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .nav-brand {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #000;
        font-weight: 700;
        font-size: 1.5rem;
        text-decoration: none;
      }

      .nav-brand-badge {
        background: #000;
        color: #fbbf24;
        padding: 0.25rem 0.75rem;
        border: 2px solid #000;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 600;
      }

      .nav-links {
        display: flex;
        gap: 1rem;
        align-items: center;
      }

      .nav-link {
        color: #000;
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s;
      }

      .nav-link:hover {
        background: rgba(0, 0, 0, 0.1);
      }

      .nav-btn {
        background: #000;
        color: #fbbf24;
        padding: 0.5rem 1rem;
        border: 2px solid #000;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.15s;
      }

      .nav-btn:hover {
        transform: translate(-2px, -2px);
        box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.3);
      }

      /* Container */
      .container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
      }

      /* Cards */
      .card {
        background: #fff;
        border: 3px solid #000;
        border-radius: 12px;
        box-shadow: 6px 6px 0px #000;
        padding: 1.5rem;
      }

      /* Buttons */
      .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border: 3px solid #000;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.15s;
        text-decoration: none;
        font-family: inherit;
      }

      .btn:hover {
        transform: translate(-2px, -2px);
        box-shadow: 4px 4px 0px #000;
      }

      .btn:active {
        transform: translate(2px, 2px);
        box-shadow: 0px 0px 0px #000;
      }

      .btn-primary {
        background: #fbbf24;
        color: #000;
      }

      .btn-warning {
        background: #f59e0b;
        color: #000;
      }

      .btn-danger {
        background: #ef4444;
        color: #fff;
      }

      .btn-secondary {
        background: #fff;
        color: #000;
      }

      .btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        border-width: 2px;
      }

      /* Form */
      .form-group {
        margin-bottom: 1.25rem;
      }

      .form-label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #000;
      }

      .form-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 3px solid #000;
        border-radius: 8px;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.15s;
      }

      .form-input:focus {
        outline: none;
        box-shadow: 4px 4px 0px #fbbf24;
      }

      /* Table */
      .table-container {
        overflow-x: auto;
      }

      .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
      }

      .table th {
        background: #1e293b;
        color: #fff;
        padding: 1rem;
        text-align: left;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
      }

      .table th:first-child {
        border-radius: 8px 0 0 0;
      }

      .table th:last-child {
        border-radius: 0 8px 0 0;
      }

      .table td {
        padding: 1rem;
        border-bottom: 2px solid #e5e7eb;
        background: #fff;
      }

      .table tr:hover td {
        background: #fef9c3;
      }

      .table tr:last-child td:first-child {
        border-radius: 0 0 0 8px;
      }

      .table tr:last-child td:last-child {
        border-radius: 0 0 8px 0;
      }

      /* Badge */
      .badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border: 2px solid #000;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
      }

      .badge-yellow {
        background: #fef3c7;
        color: #92400e;
      }

      /* Actions */
      .actions {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
      }

      .action-btn {
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 2px solid #000;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.15s;
        background: #fff;
      }

      .action-btn:hover {
        transform: translate(-2px, -2px);
        box-shadow: 3px 3px 0px #000;
      }

      .action-btn-edit {
        background: #fbbf24;
        color: #000;
      }

      .action-btn-delete {
        background: #ef4444;
        color: #fff;
      }

      /* Page header */
      .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
      }

      .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #000;
      }

      /* Empty state */
      .empty-state {
        text-align: center;
        padding: 3rem;
        color: #6b7280;
      }

      .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        display: block;
      }

      /* Stats */
      .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .stat-card {
        background: #fff;
        border: 3px solid #000;
        border-radius: 12px;
        padding: 1rem;
        text-align: center;
        box-shadow: 4px 4px 0px #000;
      }

      .stat-card.highlight {
        background: #fbbf24;
      }

      .stat-number {
        font-size: 2rem;
        font-weight: 700;
        color: #000;
      }

      .stat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #6b7280;
        font-weight: 600;
      }

      .stat-card.highlight .stat-label {
        color: #000;
      }

      /* Search */
      .search-box {
        display: flex;
        gap: 0.5rem;
        max-width: 400px;
      }

      .search-input {
        flex: 1;
        padding: 0.75rem 1rem;
        border: 3px solid #000;
        border-radius: 8px;
        font-size: 1rem;
        font-family: inherit;
        background: #fff;
        transition: all 0.15s;
      }

      .search-input:focus {
        outline: none;
        box-shadow: 4px 4px 0px #fbbf24;
      }

      .search-input::placeholder {
        color: #9ca3af;
      }

      .btn-search {
        background: #1e293b;
        color: #fff;
        padding: 0.75rem 1rem;
        border: 3px solid #000;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.15s;
      }

      .btn-search:hover {
        transform: translate(-2px, -2px);
        box-shadow: 4px 4px 0px #000;
      }

      .btn-clear {
        background: #6b7280;
        color: #fff;
        padding: 0.75rem 1rem;
        border: 3px solid #000;
        border-radius: 8px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.15s;
      }

      .btn-clear:hover {
        transform: translate(-2px, -2px);
        box-shadow: 4px 4px 0px #000;
      }

      /* Dashboard */
      .welcome-card {
        background: #fff;
        border: 3px solid #000;
        border-radius: 16px;
        box-shadow: 8px 8px 0px #000;
        padding: 2.5rem;
        text-align: center;
        margin-bottom: 2rem;
      }

      .welcome-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
      }

      .welcome-subtitle {
        color: #6b7280;
        font-size: 1rem;
      }

      .menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
      }

      .menu-card {
        background: #fff;
        border: 3px solid #000;
        border-radius: 12px;
        box-shadow: 6px 6px 0px #000;
        padding: 1.5rem;
        text-decoration: none;
        color: #000;
        transition: all 0.15s;
        display: block;
      }

      .menu-card:hover {
        transform: translate(-4px, -4px);
        box-shadow: 10px 10px 0px #000;
      }

      .menu-icon {
        width: 60px;
        height: 60px;
        background: #fbbf24;
        border: 3px solid #000;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }

      .menu-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
      }

      .menu-desc {
        color: #6b7280;
        font-size: 0.875rem;
      }
    </style>
  </head>
  <body>
    <nav class='nav'>
      <div class='nav-container'>
        <a href='/' class='nav-brand'>
          <span class='nav-brand-badge'>GUDANG</span>
          <span>Inventory App</span>
        </a>
        <div class='nav-links'>
          <a href='/suppliers' class='nav-link'>Suppliers</a>
          <a href='/items' class='nav-link'>Items</a>
          {{#if user}}
            <span class='nav-link' style='cursor: default;'>
              <i class='fas fa-user'></i>
              {{user.name}}
            </span>
            <a href='/users/logout' class='nav-btn'>
              <i class='fas fa-sign-out-alt'></i>
              Logout
            </a>
          {{else}}
            <a href='/users/login' class='nav-btn'>Login</a>
          {{/if}}
        </div>
      </div>
    </nav>
    <div class='container'>
      {{{body}}}
    </div>
  </body>
</html>