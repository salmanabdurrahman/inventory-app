<div style='max-width: 500px; margin: 0 auto;'>
  <div class='page-header'>
    <h1 class='page-title'><i
        class='fas fa-edit'
        style='margin-right: 0.5rem;'
      ></i>Edit Supplier</h1>
  </div>
  <div class='card'>
    <form action='/suppliers/{{supplier.id}}/update' method='POST'>
      <div class='form-group'>
        <label class='form-label'>Nama Supplier
          <span style='color: #ef4444;'>*</span></label>
        <input
          type='text'
          name='name'
          value='{{supplier.name}}'
          class='form-input'
          placeholder='Contoh: PT Sumber Makmur'
          required
        />
      </div>
      <div class='form-group'>
        <label class='form-label'>No. Handphone
          <span style='color: #ef4444;'>*</span></label>
        <input
          type='text'
          name='phone'
          value='{{supplier.phone}}'
          class='form-input'
          placeholder='Contoh: 081234567890'
          required
        />
      </div>
      <div class='form-group'>
        <label class='form-label'>Email</label>
        <input
          type='email'
          name='email'
          value='{{supplier.email}}'
          class='form-input'
          placeholder='Contoh: supplier@email.com'
        />
      </div>
      <div class='form-group'>
        <label class='form-label'>Alamat
          <span style='color: #ef4444;'>*</span></label>
        <textarea
          name='address'
          class='form-input'
          rows='3'
          placeholder='Contoh: Jl. Industri No. 123, Jakarta'
          required
        >{{supplier.address}}</textarea>
      </div>
      <div
        style='display: flex; gap: 1rem; justify-content: flex-end; margin-top: 1.5rem;'
      >
        <a href='/suppliers' class='btn btn-secondary'>
          <i class='fas fa-arrow-left'></i>
          Batal
        </a>
        <button type='submit' class='btn btn-warning'>
          <i class='fas fa-save'></i>
          Update
        </button>
      </div>
    </form>
  </div>
</div>